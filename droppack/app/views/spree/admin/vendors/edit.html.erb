<% content_for :page_actions do %>
  <% if frontend_available? %>
    <%= button_link_to Spree.t(:preview_vendor), vendor_url(@vendor), { class: "btn-default", icon: 'eye-open', id: 'admin_preview_vendor', target: :_blank } %>
  <% end %>
  <% if can?(:create, Spree::Vendor) %>
    <%= button_link_to Spree.t(:new_vendor), new_object_url, { class: "btn-success", icon: 'add', id: 'admin_new_vendor' } %>
  <% end %>
<% end %>

<%= render partial: 'spree/admin/shared/vendor_tabs', locals: {current: :details} %>
<%= render partial: 'spree/admin/shared/error_messages', locals: { target: @vendor } %>

<%= form_for [:admin, @vendor], method: :put, html: { multipart: true } do |f| %>
  <fieldset>
    <%= render partial: 'form', locals: { f: f } %>
    <%= render partial: 'spree/admin/shared/edit_resource_links' %>
  </fieldset>
<% end %>
