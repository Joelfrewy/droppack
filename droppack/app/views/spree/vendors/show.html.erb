<% @body_id = 'vendor-details' %>

<% cache cache_key_for_vendor do %>
  <div data-hook="vendor_show" class="row">
    <div class="col-md-4 col-sm-5" data-hook="vendor_left_part">
      <div data-hook="vendor_left_part_wrap">
        <div id="vendor-image" data-hook="vendor_image">
          <div id="main-image" class="panel panel-default" data-hook>
            <div class="panel-body text-center">
              <%= @vendor.avatar.attached? %>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="col-md-8 col-sm-7" data-hook="vendor_right_part">
      <div data-hook="vendor_right_part_wrap">
        <div id="vendor-description" data-hook="vendor_description">
          <h1 class="vendor-title" itemprop="name"><%= @vendor.name %></h1>

          <div class="well" itemprop="description" data-hook="description">
            owner: <%= @vendor.user.email %>
          </div>

          <div class="well" itemprop="description" data-hook="description">
            subscribed: <%= spree_current_user.subscribed?(@vendor) %>
          </div>

          <div id="follow_form">
          <% if spree_current_user.subscribed?(@vendor) %>
            <%= form_for(spree_current_user.active_subscriptions.find_by(vendor_id: @vendor.id),
                         html: { method: :delete }) do |f| %>
              <%= f.submit "Unsubscribe", class: "btn" %>
            <% end %>
          <% else %>
            <%= form_for(spree_current_user.active_subscriptions.build) do |f| %>
              <div><%= hidden_field_tag :vendor_id, @vendor.id %></div>
              <%= f.submit "Subscribe", class: "btn btn-primary" %>
            <% end %>
          <% end %>
          </div>
      </div>
    </div>
    <div data-hook="search_results">
      <% if @products.empty? %>
        <h6 class="search-results-title"><%= Spree.t(:no_products_found) %></h6>
      <% else %>
        <%= render partial: 'spree/shared/products', locals: { products: @products, taxon: @taxon } %>
      <% end %>
    </div>
    
  </div>
<% end %>