<%# url = spree.pack_path(pack, taxon_id: taxon.try(:id)) %>
<div id="pack_<%= pack.id %>" class="col-md-3 col-sm-6 col-xs-6 pack-list-item" data-hook="packs_list_item">
  <div class="panel panel-default">
    <%# cache(taxon.present? ? [I18n.locale, current_currency, taxon, pack] : cache_key_for_pack(pack)) do %>
      <div class="panel-body text-center pack-body">
        <%#= link_to url, itemprop: "url" do %>
          <%#= small_image(pack, itemprop: "image") %><br/>
          <%#= content_tag(:span, truncate(pack.name, length: 50), class: 'info', itemprop: "name", title: pack.name) %>
        <%# end %>
        <br/>
      </div>
      <div class="panel-footer text-center">
        <span itemprop="offers" itemscope itemtype="https://schema.org/Offer">
          <span class="price selling lead" itemprop="price" content="<%#= (pack.price_in(current_currency).amount.nil?)? 0 : pack.price_in(current_currency).amount.to_d %>">
            <%#= display_price(pack) %>
          </span>
          <span itemprop="priceCurrency" content="<%= current_currency %>"></span>
        </span>
      </div>
    <%# end %>
  </div>
</div>
